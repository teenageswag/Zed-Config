{
    "vim_mode": false,
    "disable_ai": true,
    "base_keymap": "VSCode",

    "autosave": "on_focus_change",
    "format_on_save": "on",
    "ensure_final_newline_on_save": true,
    "remove_trailing_whitespace_on_save": true,

    "restore_on_startup": "launchpad",
    "session": {
        "restore_unsaved_buffers": true,
    },

    "theme": "Minimal Blur",
    "icon_theme": "Colored Zed Icons Theme Dark",

    "ui_font_size": 16,
    "buffer_font_size": 15,
    "buffer_font_family": ".ZedMono",
    "buffer_line_height": "comfortable",

    "cursor_shape": "underline",
    "cursor_blink": false,

    "tab_size": 4,
    "soft_wrap": "prefer_line",
    "preferred_line_length": 100,

    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
    },

    "tabs": {
        "file_icons": true,
        "git_status": true,
        "show_close_button": "hover",
    },

    "gutter": {
        "line_numbers": true,
        "folds": true,
    },

    "scrollbar": {
        "show": "auto",
        "git_diff": true,
        "diagnostics": "all",
    },

    "minimap": {
        "show": "never",
    },

    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true,
    },

    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true,
            "delay_ms": 750,
        },
        "hunk_style": "staged_hollow",
    },

    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true,
        },
    },

    "file_scan_exclusions": [
        "**/.git",
        "**/.vscode",
        "**/node_modules",
        "**/build",
        "**/dist",
        "**/target",
        "**/.cache",
        "**/out",
    ],

    "languages": {
        "C++": {
            "tab_size": 4,
            "hard_tabs": false,
            "format_on_save": "on",
        },
        "C": {
            "tab_size": 4,
            "hard_tabs": false,
        },
        "JSON": {
            "tab_size": 2,
        },
        "JavaScript": {
            "tab_size": 2,
        },
        "TypeScript": {
            "tab_size": 2,
        },
        "TSX": {
            "tab_size": 2,
        },
        "HTML": {
            "tab_size": 2,
        },
        "CSS": {
            "tab_size": 2,
        },
    },

    "lsp": {
        "clangd": {
            "initialization_options": {
                "fallbackFlags": ["-std=c++23", "-Isrc", "-Iext", "-Ithird_party"],
                "clang-format": {
                    "IndentWidth": 4,
                    "TabWidth": 4,
                    "ColumnLimit": 100,
                },
            },
        },
    },

    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },
}
